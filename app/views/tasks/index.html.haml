- model_class = Task
.page-header
  %h1=t 'List_of_tasks', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:author)
      %th= model_class.human_attribute_name(:executor)
      %th= model_class.human_attribute_name(:created_at)
      %th
  %tbody
    - @tasks.each do |task|
      %tr
        %td= link_to task.name, task_path(task)
        %td= task.author.try(:email)
        %td= task.executor.try(:email)
        %td=l task.created_at
        %td
          - if can? :change_states, task
            - task.possible_events.each do |event|
              = link_to t("task.events.#{event.to_s.downcase}"), task_path(task, event: event), :method => :put, :class => 'btn btn-xs btn-default'
          - if can? :update, task
            = link_to t('.edit', :default => t("helpers.links.edit")), edit_task_path(task), :class => 'btn btn-default btn-xs'
          - if can? :destroy, task
            = link_to t('.destroy', :default => t("helpers.links.destroy")), task_path(task), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

- if can? :create, Task
  = link_to t('Create_task'), new_task_path, :class => 'btn btn-primary', remote: true
